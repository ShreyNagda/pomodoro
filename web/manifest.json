{
    "manifest_version": 3,
    "name": "pomodoro",
    "short_name": "pomodoro",
    "start_url": ".",
    "display": "standalone",
    "background_color": "#0175C2",
    "theme_color": "#0175C2",
    "description": "A productive timer based on pomodoro technique",
    "orientation": "portrait-primary",
    "prefer_related_applications": false,
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_popup_width": 500,
        "default_popup_height": 400
    },
    "permissions": [
        "activeTab"
    ],
    "icons": [
        {
            "src": "icons/Icon-192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "icons/Icon-512.png",
            "sizes": "512x512",
            "type": "image/png"
        },
        {
            "src": "icons/Icon-maskable-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "icons/Icon-maskable-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ]
}